<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.syncstudy.UI.GroupManager.GroupController" stylesheets="@group-styles.css">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="group-manager-header">
         <children>
            <Label text="Gestionnaire de Groupes" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>

      <!-- Search Section -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Recherche:" />
            <TextField fx:id="searchBar" promptText="Nom du groupe..." HBox.hgrow="ALWAYS" />
            <Button onAction="#onSearch" text="Chercher" />
            <ComboBox fx:id="categoryFilter" promptText="Catégorie" />
            <Button onAction="#onFilter" text="Filtrer" />
            <Button onAction="#onClear" text="Effacer" />
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>

      <!-- Status Label -->
      <HBox>
         <children>
            <Label fx:id="label" text="Chargement..." />
         </children>
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
         </padding>
      </HBox>

      <!-- Groups Table -->
      <TableView fx:id="groupsTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Nom du Groupe" />
            <TableColumn fx:id="categoryColumn" prefWidth="120.0" text="Catégorie" />
            <TableColumn fx:id="membersColumn" prefWidth="80.0" text="Membres" />
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" />
         </VBox.margin>
      </TableView>

      <!-- Action Buttons -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button onAction="#onRefresh" text="Actualiser" />
            <Button onAction="#onClick" text="Voir Détails" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
