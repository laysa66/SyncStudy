<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.syncstudy.UI.ProfileManager.OwnProfileController" stylesheets="@profile-styles.css">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" styleClass="user-info-header">
            <children>
                <Label fx:id="fullnameLabel" text="User" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </HBox>

        <!-- User Info -->
        <VBox spacing="10.0">
            <children>
                <Label fx:id="usernameLabel" text="Username: ">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="emailLabel" text="Email: ">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="universityLabel" text="University: ">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="departmentLabel" text="Department: ">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="groupsCountLabel" text="Groups: " />
            </children>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </VBox>

        <!-- Close Button -->
        <HBox alignment="CENTER">
            <children>
                <Button fx:id="closeButton" onAction="#onClose" text="Close" />
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>