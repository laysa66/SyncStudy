<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.syncstudy.UI.ChatManager.ChatController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <HBox style="-fx-background-color: #2196F3; -fx-padding: 10;">
            <Label text="Group Chat" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" style="-fx-background-color: #F5F5F5;">
            <VBox fx:id="messageContainer" spacing="10" style="-fx-padding: 10;"/>
        </ScrollPane>
    </center>

    <bottom>
        <VBox style="-fx-padding: 10; -fx-spacing: 5;">
            <Label fx:id="errorLabel" textFill="red" visible="false"/>
            <HBox spacing="10">
                <TextArea fx:id="messageInput"
                          promptText="Type a message..."
                          wrapText="true"
                          prefRowCount="2"
                          HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton"
                        text="Send"
                        onAction="#handleSendMessage"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
